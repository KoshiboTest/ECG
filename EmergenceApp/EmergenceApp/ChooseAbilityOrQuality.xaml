<Window x:Class="EmergenceApp.ChooseAbilityOrQuality"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmergenceApp"
        mc:Ignorable="d"
        Title="ChooseAbilityOrQuality" Height="300" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Grid.Column="0" Click="Ability_Click">Ability</Button>
        <Button Grid.Column="1" Click="Quality_Click">Quality</Button>
    </Grid>
</Window>
